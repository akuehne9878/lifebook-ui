<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:uxap="sap.uxap" xmlns:u="sap.ui.unified" controllerName="lifebook.view.main.sidecontent.newWorkspace.NewWorkspace" height="100%">
	<Page showHeader="false">
		<VBox class="sapUiSmallMarginTopBottom">
			<VBox class="sapUiSmallMarginBeginEnd">
				<Label text="Name" />
				<Input type="Text" value="{/title}" placeholder="{/placeholder}" width="100%" submit="onSave" class="sapUiSmallMarginEnd"/>
			</VBox>
			<VBox justifyContent="End" alignItems="End" alignContent="End" class="sapUiSmallMarginEnd">
				<Button type="Emphasized" text="Neuer Workspace erstellen" icon="sap-icon://save" press="onSave"/>
			</VBox>
		</VBox>
	</Page>
</mvc:View>